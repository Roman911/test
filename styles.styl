header = #696969
btn = #ff8900
clearBtn = #ff4800
backBurger = #db7200
contacts = #f5f5f5
line = #e8e8e8
vline = #dadada
link = #3b3b3b
lineActive = #ffc925
formTop = #606a76
tableLink = #efefef
select = #9c9c9c
mark = #8b8b8b
lineDel = #e00000
footerText = #cbcbcb
modalBg = #1c1c1c

.modal-background
  position fixed
  top 0
  left 0
  height 100vh
  width 100vw
  max-width 100%
  background modalBg
  opacity 0.8
.modal
  position absolute
  top 40%
  left 50%
  transform translate(-50%, -50%)
  padding 35px 40px
  background white
  z-index 10
  .close
    position absolute
    top -40px
    right -40px
    cursor pointer
  &__form
    color link
    h3
      font-size 24px
      font-weight bold
      padding-bottom 35px
    p
      font-size 14px
      padding-bottom: 10px
      font-weight 600
    .label
      &-fdc
        display flex
        flex-direction column
        align-items center
      input[type="text"],
      input[type="email"],
      input[type="password"]
        width 100%
        color select
        padding 10px
        font-size 16px
        border 1px solid vline
        font-weight 500
      input[type="submit"]
        margin 20px auto 0
        padding 20px 40px
        font-weight 600
      &-login
        input
          margin-bottom 20px
        .checkbox
          display flex
          align-items center
          justify-content flex-start
          input
            cursor pointer
            margin 0 6px 10px 0
        .link
          a
            font-size 14px
            font-weight 600
            color link
            &:last-child
              padding-left 10px
    .btn-log
      width 280px
      padding 14px
      display flex
      align-items center
      justify-content center
      margin-bottom 20px
      cursor pointer
      img
        filter grayscale(100%) contrast(200%)
      p
        color white
        padding 0 0 0 10px
      &-facebook
        background #3b5998
      &-twitter
        background #41abe1
      &-google
        background #ea4335
    &-pr
      padding-right 40px
      border-right 1px solid vline
      width 310px
    &-pl
      padding-left 40px
@media (max-width 830px)
  .modal
    &__form-pr
      padding 0
      border none
      width auto
    &__form-pl
      padding 0
    .row
      flex-direction column
@media (max-width 450px)
  .modal
    .close
      top 10px
      right 10px
@media (max-width 380px)
  #modalLogin
    top 0
    left 10px
    transform translate(0%, 0%)