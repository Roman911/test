header = #696969
btn = #ff8900
clearBtn = #ff4800
backBurger = #db7200
contacts = #f5f5f5
line = #e8e8e8
vline = #dadada
link = #3b3b3b
lineActive = #ffc925
formTop = #606a76
tableLink = #efefef
select = #9c9c9c
mark = #8b8b8b
lineDel = #e00000
footerText = #cbcbcb
modalBg = #1c1c1c

@import url('https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;1,900&display=swap')

*
  margin 0
  padding 0
  box-sizing border-box
body
  font-family 'Roboto', sans-serif
a
  text-decoration none
ul
  list-style-type none
button
  cursor pointer
  border none
  border-radius 0
  outline none
input, select
  outline none
input[type="number"]::-webkit-outer-spin-button,
input[type="number"]::-webkit-inner-spin-button
  -webkit-appearance none
input[type="number"]
  -moz-appearance textfield
input[type="number"]:hover,
input[type="number"]:focus
  -moz-appearance number-input
select, option
  cursor pointer
.container
  max-width 1380px
  margin 0 auto
  padding 0 10px
.row
  display flex
  justify-content space-between
.col-xs
  width 16.6666667%
.col-s
  width 25%
.col-sm
  width 33.3333333%
.col-m
  width 50%
.col-l
  width 75%
.fcsb
  display flex
  align-items center
  justify-content space-between
.btn
  background btn
  color white
  border none
  border-radius 0
  cursor pointer
.gradient
  background rgb(255,133,0)
  background linear-gradient(90deg, rgba(255,133,0,1) 0%, rgba(255,174,0,1) 100%)
.grayscale
  filter grayscale(100%)
.bottom-line
  position absolute
  bottom -1px
  border-bottom 1px solid btn
  width 100%
.header
  .top
    background header
    .navbar
      position relative
      ul
        display flex
      a
        text-transform uppercase
        font-size 12px
        color white
      &__left
        a
          padding 16px 15px 15px
          display block
          opacity 0.6
          transition 300ms
          border-bottom 2px solid transparent
          &:hover
            opacity 1
            border-color lineActive
        .active
          a
            opacity 1
            border-color lineActive
        button
          display none
          background transparent
        .burger
          flex-direction column
          align-items flex-start
          padding 7px
          &__line
            height 3px
            width 30px
            margin 4px
            background white
            &-m
              width 24px
            &-s
              width 20px
      &__right
        button
          padding 16px 30px
          display flex
          img
            margin-right 20px
      &__logo
        display none
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        img
          width 160px
    @media (max-width 1294px)
      .navbar__logo
        display block
    @media (max-width 1160px) and (min-width 780px)
      .navbar__btn:nth-child(4),
      .navbar__btn:last-child
        display none
    @media (max-width 780px)
      .navbar__left
        ul
          display none
          position absolute
          z-index 20
          flex-direction column
          background white
          border 1px solid line
          box-shadow 0 0 2px 1px select
          a
            color black
            font-size 14px
            border none
            opacity 1
            padding 10px 30px
            font-weight 600
          &.active
            display flex
        button
          display flex
    @media (max-width 470px)
      .navbar__logo
        left 35%
        img
          width 110px
  .bottom
    margin-top 40px
    .contacts
      padding-left 20px
      display flex
      align-items center
      background contacts
      width max-content
      &__number
        font-weight bold
        font-style italic
        padding-right 40px
      &__callback
        padding 14px 36px
        display flex
        text-transform uppercase
        font-size 11px
        img
          padding-right 4px
    .actions
      padding 0 30px
      &__element
        display flex
        flex-direction column
        justify-content center
        align-items center
        position relative
        .digil
          position absolute
          top -25px
          left 50%
          transform translateX(-50%)
          background url("assets/digils.png")
          width 35px
          height 34px
          display none
          justify-content center
          &.active
            display flex
          span
            color white
            font-weight 600
            font-size 11px
        span
          padding-top 3px
          font-size 10px
          text-transform uppercase
    @media (max-width 1294px)
      .logo
        display none
    @media (max-width 840px)
      .contacts
        padding-left 0
        .contacts__number
          display none
@media (max-width 1000px)
  .header
    .bottom
      .actions.col-s
        width 30%
@media (max-width 820px)
  .header
    .bottom
      .actions.col-s
        width 50%
@media (max-width 410px)
  .header
    .bottom
      .col-m
        width 50%
        button
          padding 10px
      .actions
        padding 0
main
  .top
    margin-top 34px
    .menu
      padding-right 14px
      &__top
        display flex
        align-items center
        img
          background backBurger
          padding 23px
        span
          font-size 19px
          padding-left 23px
          color white
          font-weight bold
      &__list
        padding-right 14px
        margin-top 10px
        li
          padding 18px 22px 17px 40px
          border-bottom 1px solid line
          color link
          font-weight bold
          font-size 16px
          text-transform uppercase
          cursor pointer
          &:last-child
            border none
          img
            filter grayscale(100%)
            transition 200ms
          &:hover
            img
              filter grayscale(0)
          &.active
            img
              filter grayscale(0)
  .search
    background contacts
    &__input
      background transparent
      border none
      padding 20px 33px
      font-size 14px
      width 100%
    &__category
      margin 2px 27px 2px 0
      padding 10px 14px
      border none
      border-left 1px solid vline
      font-size 14px
      appearance none
      background url("assets/arrow.png") right no-repeat
      filter grayscale(100%)
      transition 200ms
      &:hover
        filter grayscale(0)
      option
        background contacts
    &__submit
      padding 19px 55px
      border none
      text-transform uppercase
      font-weight bold
      font-size 16px
  .form
    margin-top 20px
    background header
    &__top
      background formTop
      padding 0 60px 0 30px
      li
        color white
        font-weight bold
        border-bottom 2px solid transparent
        padding 22px
        cursor pointer
        transition 300ms
        span
          opacity 0.7
          margin-left 15px
          font-size 18px
          transition 300ms
        &:hover
          border-color lineActive
          img
            filter grayscale(0)
          span
            opacity 1
      .active
        border-color lineActive
        img
          filter grayscale(0)
        span
          opacity 1
    &__tables
      padding 20px 20px 20px 40px
      .table
        .table-select
          display none
          &.active
            display block
        &__link
          width max-content
          background tableLink
          padding 3px 4px
          button
            padding 11px 50px
            font-size 14px
            transition 200ms
            background transparent
            color black
            &:hover
              background btn
              color white
            &.active
              background btn
              color white
        &__marks
          padding-top 22px
          .nemo
            width 100%
            margin-right 12px
          .mark
            width 100%
            margin-right 12px
            background white
            border-bottom 1px solid contacts
            transition 200ms
            select
              width 100%
              padding 11px
              appearance none
              background url("assets/arrow.png") 90% no-repeat
              color select
            &:hover
              border-color btn
            &__price
              width 100%
              p
                font-size 14px
                color white
                padding-right 25px
              .mark
                input
                  width 100%
                  padding 11px
        &__bottom
          padding 28px 15px 15px 0
          button
            background clearBtn
            padding 17px 38px
            display flex
            align-items center
            img
              padding-right 12px
          input
            font-weight bold
            text-transform uppercase
            padding 17px 32px
  .main
    &__top
      margin-top 28px
      border-bottom 1px solid vline
      width 100%
      .title
        position relative
        h1
          font-size 35px
          padding-bottom 11px
      .link
        a
          display flex
          align-items center
          color black
          text-decoration underline
          font-size 14px
          font-weight bold
        img
          margin-left 12px
  .cards
    border-bottom 1px solid vline
    .card
      padding 20px 10px
      border-right 1px solid vline
      &:last-child
        border none
      &__top
        height 86px
        p
          margin 0 0 19px 8px
          background contacts
          padding 0 23px
          width max-content
          font-size 14px
          color mark
        a
          color link
          text-decoration underline
          font-size 17px
          transition 300ms
          line-height 1.5
          &:hover
            text-decoration none
      .info
        display flex
        align-items flex-end
        justify-content space-between
        &__reviews
          margin-top 14px
          img
            margin-right 2px
          a
            margin-left 5px
            font-size 13px
            color mark
            text-decoration underline
        &__availability
          p
            color formTop
            font-size 12px
      &__main
        padding-top 20px
        .product
          text-align center
          position relative
          &__wheel
            height 205px
            width auto
          &__type
            position absolute
            top 0
            left 0
            p
              font-size 10px
              padding-bottom 16px
              text-transform uppercase
              color mark
      &__sticker
        display flex
        align-items center
        justify-content center
        height 42px
      &__price
        text-transform uppercase
        display flex
        align-items flex-end
        justify-content space-between
        h2
          font-style italic
          font-weight 900
          font-size 28px
          color link
        p
          text-decoration line-through
          text-decoration-color lineDel
          font-weight bold
          color mark
          font-style italic
          font-size 16px
      &__btn
        button
          margin 19px auto 0
          text-transform uppercase
          font-size 14px
          padding 13px 32px
          font-weight bold
          transition 300ms
          img
            margin-right 10px
          &:hover
            filter brightness(93%)
      &__bottom
        margin-top 14px
        button
          display flex
          align-items center
          background white
          text-decoration underline
          color link
          font-size 14px
          & img
            margin-right 15px
          &:hover
            text-decoration none
          span:nth-child(2)
            display block
          span:last-child
            display none
          &.active
            span:nth-child(2)
              display none
            span:last-child
              display block
  @media (max-width 1280px)
    .cards.row
      flex-wrap wrap
      justify-content center
      .card
        width 310px
  @media (max-width 656px)
    .card
      border none
  @media (max-width 1276px) and (min-width 966px)
    .card:nth-child(3)
      border none
  @media (max-width 966px)
    .card:nth-child(2)
      border none
@media (max-width 1294px)
  .top
    .col-l
      width 100%
    .menu.col-s
      width 75px
    .menu
      &__top
        span
          display none
      &__list
        display none
@media (max-width 1060px)
  .top
    .form
      display flex
      &__top
        padding 0
        ul
          flex-direction column
        li
          padding 14px
          width 170px
      .tables
        .mark
          width 50%
@media (max-width 780px)
  .top
    .form
      .tables
        .table
          &__marks
            flex-direction column
            align-items flex-start
            .mark
              margin-bottom: 6px
      .table__bottom
        flex-direction column
        button
          margin-bottom 10px
@media (max-width 640px)
  .top
    .search
      select
        display none
    .form
      &__top
        display none
@media (max-width 470px)
  .top
    .menu
      display none
@media (max-width 340px)
  .top
    .form__tables
      padding 10px
.footer
  background header
  margin-top 56px
  color footerText
  .container
    .block
      margin-top 33px
      padding 0 12px
      &-large
        padding-right 104px
        padding-left 0
      &__top
        border-bottom 1px solid select
        .title
          position relative
          width max-content
          h3
            padding-bottom 10px
      &__main
        padding-top 28px
        h2
          text-transform uppercase
          font-size 20px
        h1
          text-transform uppercase
          font-size 26px
          color white
          padding-top 4px
        .input
          padding-top 10px
          label
            position relative
            padding 15px 0
            input[type="email"]
              width 100%
              padding 16px 27px
              font-size 14px
            input[type="submit"]
              position absolute
              top 0
              right 0
              text-transform uppercase
              font-size 16px
              font-weight bold
              padding 17px 24px 16px
      &__links
        padding-top 21px
        display flex
        flex-direction column
        a
          text-decoration underline
          text-decoration-color footerText
          color white
          font-size 13px
          font-weight bold
          line-height 36px
  &__bottom
    margin-top 25px
    border-top 1px solid select
    padding 30px 0 20px
    .logo
      display flex
      align-items center
      p
        font-size 12px
        margin-left 45px
    .social
      display flex
      align-items center
      &__wrapper
        width 50px
        height 50px
        border 1px solid footerText
        display flex
        align-items center
        justify-content center
        margin-left 9px
        transition 200ms
        &:hover
          border-color lineActive
          img
            filter none
      img
        filter grayscale(100%) contrast(200%)
        transition 200ms
    .wezom
      display flex
      align-items center
      justify-content flex-end
      padding-right 5px
      img
        padding-right: 18px
      &__right
        padding-left 17px
        border-left 1px solid footerText
        p
          font-size 12px
          &:last-child
            color white
            padding-top 8px
            font-weight 700
@media (max-width 1000px)
  .footer
    .row
      flex-direction column
      align-items center
@media (max-width 990px)
  .footer
    .row
      .block
        display none
        &:first-child
          display block
          width 100%
          padding-right 0
    &__bottom
      .row
        flex-direction column
        align-items center
        .col-m,
        .col-sm
          padding-bottom 20px
          .logo
            flex-direction column
            p
              margin 20px 0 0 0
          .social
            justify-content space-between
@media (max-width 640px)
  .footer
    &__bottom
      .col-m,
      .col-sm,
      .col-xs
        width 100%